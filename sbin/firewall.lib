	if [ ! -f ${RULES_SCRIPT} ] ; then
		echo "ERROR: compile rules first !"
		exit 1
	fi

	cat ${RULES_SCRIPT} |while read L ; do
#		echo -n "${L} ==> "
		echo "${L}"
		${L} #2>/dev/null >/dev/null
